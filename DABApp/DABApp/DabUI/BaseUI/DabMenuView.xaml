<?xml version="1.0" encoding="UTF-8"?>
<t:SlideMenuView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:t="clr-namespace:SlideOverKit" 
		x:Class="DABApp.DabMenuView" xmlns:local="clr-namespace:DABApp;">
	<t:SlideMenuView.Resources>
		<ResourceDictionary>
			<local:NegateBooleanConverter x:Key="inverter"/>
		</ResourceDictionary>
	</t:SlideMenuView.Resources>
	<StackLayout VerticalOptions="FillAndExpand" Padding="10,40,10,0" BackgroundColor="{StaticResource SlideMenuBackgroundColor}">
		<!--<Button Text="Channels" Clicked="OnChannels" HorizontalOptions="Start" FontSize="Large"/>
		<Button Text="About" Clicked="OnAbout" HorizontalOptions="Start" FontSize="Large"/>
		<Button Text="Settings" Clicked="OnSettings" HorizontalOptions="Start" FontSize="Large"/>-->
		<local:NonScrollingListView x:Name="pageList"  BackgroundColor="Transparent" ItemsSource="{Binding Source={x:Static local:ContentConfig.Instance}, Path=nav}"
				ItemTapped="OnItemTapped">
			<local:NonScrollingListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<StackLayout Padding="10" Spacing="5">
							<Label Text="{Binding title}" FontSize="20" Style="{StaticResource playerLabelStyle}"/>
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</local:NonScrollingListView.ItemTemplate>
		</local:NonScrollingListView>
		<BoxView HeightRequest="2" HorizontalOptions="FillAndExpand"  BackgroundColor="#FFFFFF" Opacity=".27" Color="#FFFFFF"/>
		<StackLayout Orientation="Horizontal" VerticalOptions="End" HorizontalOptions="FillAndExpand" Padding="0,10,0,10">
			<local:ImageCircle x:Name="Avatar" Aspect="AspectFit" IsVisible="{Binding Source={x:Static local:GuestStatus.Current}, Path=IsGuestLogin, Converter={StaticResource inverter}}" HorizontalOptions="Start" VerticalOptions="Center" HeightRequest="35" CacheDuration="{x:Static local:GlobalResources.ImageCacheValidity}" Source="{Binding Source={x:Static local:GuestStatus.Current}, Path=AvatarUrl}" AutomationProperties.IsInAccessibleTree="true" AutomationProperties.Name="{Binding Source={x:Static local:GuestStatus.Current}, Path=UserName}"/>
				<!--<local:ImageCircle.Source>
					<UriImageSource x:Name="AvatarSource" CacheValidity="{x:Static local:GlobalResources.ImageCacheValidity}" Uri="{Binding Source={x:Static local:GuestStatus.Current}, Path=AvatarUrl}"/>
				</local:ImageCircle.Source>
			</local:ImageCircle>-->
			<Button x:Name="SignUp" Text="Sign up Â»" Clicked="OnSignUp" IsVisible="{Binding Source={x:Static local:GuestStatus.Current}, Path=IsGuestLogin}" BorderColor="Transparent" HorizontalOptions="StartAndExpand" FontSize="Small"  TextColor="White" FontAttributes="Bold" AutomationProperties.IsInAccessibleTree="true"/>
			<Label x:Name="UserName" TextColor="White" Text="{Binding Source={x:Static local:GuestStatus.Current}, Path=UserName}" IsVisible="{Binding Source={x:Static local:GuestStatus.Current}, Path=IsGuestLogin, Converter={StaticResource inverter}}" HorizontalOptions="StartAndExpand" VerticalOptions="Center" FontSize="Small" FontAttributes="Bold" AutomationProperties.IsInAccessibleTree="true"/>
			<Button x:Name="Settings" Image="ic_settings_white_3x.png" WidthRequest="25" HeightRequest="25" HorizontalOptions="End" Clicked="OnSettings" Style="{StaticResource imageButtonStyle}" VerticalOptions="Center" AutomationProperties.Name="Settings" AutomationProperties.IsInAccessibleTree="true"/>
		</StackLayout>
	</StackLayout>
</t:SlideMenuView>
