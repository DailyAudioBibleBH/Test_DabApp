<?xml version="1.0" encoding="UTF-8"?>
<t:SlideMenuView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:t="clr-namespace:SlideOverKit" 
		x:Class="DABApp.DabMenuView" xmlns:local="clr-namespace:DABApp;">
	<StackLayout VerticalOptions="FillAndExpand" BackgroundColor="Red" Padding="30" HeightRequest="1000">
		<Button Text="Channels" Clicked="OnChannels" TextColor="White" HorizontalOptions="Start" FontSize="Large"/>
		<Button Text="About" Clicked="OnAbout" TextColor="White" HorizontalOptions="Start" FontSize="Large"/>
		<Button Text="Settings" Clicked="OnSettings" TextColor="White" HorizontalOptions="Start" FontSize="Large"/>
		<local:ItemsStack x:Name="pageList">
			<local:ItemsStack.ItemTemplate>
				<DataTemplate>
					<Button Text="{Binding pages}" HorizontalOptions="Start" TextColor="White" FontSize="Large"/>
				</DataTemplate>
			</local:ItemsStack.ItemTemplate>
		</local:ItemsStack>
		<StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand" HorizontalOptions="FillAndExpand">
			<Button Text="Image" HorizontalOptions="Start" VerticalOptions="End"/>
			<Button Text="Your Name" HorizontalOptions="Start" TextColor="White" VerticalOptions="End"/>
			<Button Image="ic_settings_white.png" HorizontalOptions="EndAndExpand" VerticalOptions="End"/>
		</StackLayout>
	</StackLayout>
</t:SlideMenuView>
