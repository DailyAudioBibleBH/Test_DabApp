<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DABApp.DabForumTopicListView" xmlns:local="clr-namespace:DABApp;">
	<ContentView.Content>
		<StackLayout>
			<StackLayout Padding="10" Spacing="10">
				<Button x:Name="Post" Text="Post a prayer request" FontSize="Large" FontAttributes="Bold" Style="{StaticResource highlightedButtonStyle}"/>
			</StackLayout>
			<ListView x:Name="TopicList" SeparatorVisibility="Default" SeparatorColor="{DynamicResource InputBackgroundColor}" HasUnevenRows="true" IsPullToRefreshEnabled="true">
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>
							<StackLayout Padding="10" Spacing="10">
								<Label Text="{Binding Path=., Converter={StaticResource ActivityConverter}}" Style="{StaticResource secondaryLabelStyle}" FontSize="Small"/>
								<Label Text="{Binding title}" Style="{StaticResource playerLabelStyle}" FontSize="Medium"/>
								<Label Text="{Binding Path=., Converter={StaticResource ParticipantConverter}}" Style="{StaticResource secondaryLabelStyle}" FontSize="Small"/>
							</StackLayout>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</StackLayout>
	</ContentView.Content>
</ContentView>
