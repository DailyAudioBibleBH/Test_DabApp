<?xml version="1.0" encoding="UTF-8"?>
<local:DabBaseContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DABApp.DabLoginPage"
	xmlns:local="clr-namespace:DABApp;">
	<ContentPage.Content>
		<StackLayout Padding="10" Spacing="5">
			<Image x:Name="Logo" VerticalOptions="EndAndExpand" HorizontalOptions="CenterAndExpand" Source="LoginLogo10x.png"/>
			<Frame/>
			<Label Text="Email" FontSize="Micro" VerticalOptions="End"/>
			<local:DarkKeyboardEntry x:Name="Email" VerticalOptions="Center" Keyboard="Email" Completed="OnCompleted"/>
			<Label Text="Password" FontSize="Micro" VerticalOptions="Center"/>
			<local:DarkKeyboardEntry x:Name="Password" VerticalOptions="Center" IsPassword="true" Completed="OnLogin"/>
			<Frame/>
			<Button x:Name="Login" Text="Log in" Clicked="OnLogin" Style="{StaticResource highlightedButtonStyle}"/>
			<StackLayout Orientation="Horizontal" VerticalOptions="StartAndExpand">
				<Button Text="Forgot Password?" Clicked="OnForgot" BorderColor="Transparent" HorizontalOptions="StartAndExpand"/>
				<Button x:Name="GuestLogin" Text="Log in as Guest" Clicked="OnGuestLogin" BorderColor="Transparent" HorizontalOptions="EndAndExpand"/>
			</StackLayout>
			<!--<Frame OutlineColor="#333333" VerticalOptions="EndAndExpand">-->
				<local:HtmlLabel x:Name="SignUp" VerticalOptions="End" HorizontalTextAlignment="Center" HorizontalOptions="Center"/>
			<!--</Frame>-->
			<!--<Button Text="Don't have an account? Sign up!" VerticalOptions="End" Clicked="OnSignUp" BorderWidth="2" BorderColor="#333333"/>-->
		</StackLayout>
	</ContentPage.Content>
</local:DabBaseContentPage>
