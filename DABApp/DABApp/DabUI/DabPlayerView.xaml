<?xml version="1.0" encoding="UTF-8"?>
<t:MenuContainerPage xmlns:t="clr-namespace:SlideOverKit;assembly=SlideOverKit" xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DABApp.DabPlayerView" xmlns:local="clr-namespace:DABApp;assembly=DABApp">
	<t:MenuContainerPage.Content>
		<StackLayout Padding="20" Spacing="20">
			<Label Text="Player"/>
			<Slider x:Name="SeekBar" HorizontalOptions="FillAndExpand" Minimum="0" Maximum="10" 
					Value="{Binding Position}" BindingContext="local: PlayerViewModel" ValueChanged="OnSeek"/>
			<StackLayout Orientation="Horizontal">
				<Label x:Name="CurrentTime" Text="0.00" HorizontalOptions="StartAndExpand"/>
				<Label x:Name="RemainingTime" Text="-0.00" HorizontalOptions="EndAndExpand"/>
			</StackLayout>
			<StackLayout Orientation="Horizontal">
				<Button Text="Back 30" Clicked="OnBack30" HorizontalOptions="StartAndExpand"/>
				<Button Text="Play" Clicked="OnPlay" HorizontalOptions="CenterAndExpand"/>
				<Button Text="Forward 30" Clicked="OnForward30" HorizontalOptions="EndAndExpand"/>
			</StackLayout>
		</StackLayout>
	</t:MenuContainerPage.Content>
</t:MenuContainerPage>
